android-sast:
  stage: analysis
  extends: .base-android
  needs: [pre:android]
  allow_failure: true
  variables:
    PROJECT_DIR: androidApp
  script:
    - cd $PROJECT_DIR
    - bundle install
    - bundle exec fastlane sast
  artifacts:
    name: android-sast
    when: always
    expire_in: 1 day
    paths:
      - androidApp/build/reports/lint-results-debug.*
      - androidApp/build/reports/detekt/*
  rules:
    - if: $CI_PIPELINE_SOURCE == "schedule"